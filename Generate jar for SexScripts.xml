<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create jars for Mine">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="../../Extras/SexScripts/scripts/Mine.jar">
            <manifest>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
            <fileset dir="../PCMPlayer/bin"/>
        </jar>
        <jar destfile="../../Extras/SexScripts/scripts/Mine Scripts.zip">
            <manifest>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="assets" includes="Mine/scripts/**"/>
        </jar>
        <jar destfile="../../Extras/SexScripts/scripts/Mine Resources.zip">
            <manifest>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="../mine-assets/assets" excludes="Mine/accessories/**,Mine/mistress/**,Mine/scripts/**"/>
        </jar>
        <jar destfile="../../Extras/SexScripts/scripts/Mine Mistress.zip">
            <manifest>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="../mine-assets/assets" includes="Mine/mistress/**"/>
        </jar>
        <jar destfile="../../Extras/SexScripts/lib/TeaseLib.jar">
            <manifest>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="../TeaseLib/bin"/>
        </jar>
        <copy todir="../../Extras/SexScripts/scripts/Mine/accessories/">
            <fileset dir="../mine-assets/assets/Mine/accessories/"/>
        </copy>
        <copy todir="../../Extras/SexScripts/lib/">
            <fileset dir="../TeaseLib/lib/" excludes="**.pdb"/>
        </copy>
    </target>
</project>
